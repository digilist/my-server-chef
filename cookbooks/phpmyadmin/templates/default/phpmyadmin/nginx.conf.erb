location /<%= node[:phpmyadmin][:nginx][:url] %> {
	alias <%= node[:phpmyadmin][:path] %>;
	
	index index.php index.html index.htm;
	try_files $uri $uri/ /index.html /index.php;
}

location ~ ^/<%= node[:phpmyadmin][:nginx][:url] %>/(.+\.php)$ {
	alias <%= node[:phpmyadmin][:path] %>/$1;
	fastcgi_param SCRIPT_FILENAME <%= node[:phpmyadmin][:nginx][:url] %>$1;
	fastcgi_split_path_info ^(.+\.php)(/.+)$;
	fastcgi_pass unix:/var/run/php5-fpm-<%= node[:phpmyadmin][:user] %>.sock;
	fastcgi_index index.php;
	include fastcgi_params;
}
